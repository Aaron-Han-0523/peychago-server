<!DOCTYPE html>
<html lang="ko">

<head>
    <%- include ("../partials/header.ejs") %>
</head>

<body class="layout-boxed alt-menu">

    <%- include ("../partials/loader.ejs") %>

        <%- include ("../partials/nav.ejs") %>

            <!--  BEGIN MAIN CONTAINER  -->
            <div class="main-container sidebar-closed " id="container">

                <div class="overlay"></div>
                <div class="search-overlay"></div>

                <%- include ("../partials/sidebar.ejs") %>

                    <!--  BEGIN CONTENT AREA  -->
                    <div id="content" class="main-content">
                        <div class="layout-px-spacing">

                            <div class="middle-content container-xxl p-0">
                                <!-- BREADCRUMB -->
                                <div class="page-meta">
                                    <nav class="breadcrumb-style-one" aria-label="breadcrumb">
                                        <ol class="breadcrumb">
                                            <li class="breadcrumb-item"><a href="/notice">공지사항</a></li>
                                            <li class="breadcrumb-item active" aria-current="page">
                                                <%= data.notice_id %>
                                            </li>
                                            <li class="breadcrumb-item active" aria-current="page">수정</li>
                                        </ol>
                                    </nav>
                                </div>
                                <!-- /BREADCRUMB -->

                                <div class="row layout-spacing">
                                    <div class="col-lg-12 layout-top-spacing">
                                        <div class="col-lg-12">
                                            <div class="statbox widget box box-shadow">
                                                <div class="widget-header">
                                                    <div class="row">
                                                        <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                                            <h4></h4>
                                                        </div>
                                                    </div>
                                                </div>
                                                <form method="post">
                                                    <div class="widget-content widget-content-area">
                                                        <div class="row">
                                                            <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                                                <h6>제목</h6>
                                                            </div>
                                                        </div>

                                                        <div class="row">
                                                            <div class="col-lg-10 col-12 ">
                                                                <div class="form-group">
                                                                    <label for="title"
                                                                        class="visually-hidden">Text</label>
                                                                    <input id="title" type="text" name="title"
                                                                        placeholder="" class="form-control" required
                                                                        value="<%= data.title %>">
                                                                </div>
                                                            </div>
                                                        </div>

                                                        <div class="row layout-top-spacing">
                                                            <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                                                <h6>내용</h6>
                                                            </div>
                                                        </div>

                                                        <div id="editor-container">
                                                            <div class="col-lg-10 col-12 ">
                                                                <textarea class="form-control w-100" name="content"
                                                                    rows="15"><%= data.content %></textarea>
                                                            </div>
                                                        </div>

                                                        <div class="row layout-top-spacing">
                                                            <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                                                <h6>링크Link</h6>
                                                            </div>
                                                        </div>
                                                        <div class="row">
                                                            <div class="col-lg-10 col-12 ">
                                                                <div class="form-group">
                                                                    <label for="link"
                                                                        class="visually-hidden">Text</label>
                                                                    <input id="link" type="text" name="link"
                                                                        placeholder="" class="form-control"
                                                                        value="<%= data.link %>">
                                                                </div>
                                                            </div>
                                                        </div>

                                                        <div class="row layout-top-spacing">
                                                            <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                                                <h6>위치설정</h6>
                                                            </div>
                                                        </div>

                                                        <select name="type">
                                                            <% if(data.type==2) { %>
                                                                <option value="2" selected>상단</option>
                                                                <% } else { %>
                                                                    <option value="2">상단</option>
                                                                    <% } %>
                                                                        <% if(data.type==1) { %>
                                                                            <option value="1" selected>고정안함</option>
                                                                            <% } else { %>
                                                                                <option value="1">고정안함</option>
                                                                                <% } %>
                                                                                    <% if(data.type==0) { %>
                                                                                        <option value="0" selected>
                                                                                            하단</option>
                                                                                        <% } else { %>
                                                                                            <option value="0">하단
                                                                                            </option>
                                                                                            <% } %>
                                                        </select>

                                                        <!--<div class="row layout-top-spacing">
                                        <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                                            <h6>Link</h6>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-10 col-12 ">
                                                <div class="form-group">
                                                    <label for="t-text" class="visually-hidden">Text</label>
                                                    <input id="t-text2" type="text" name="txt" placeholder="" class="form-control" required>
                                                </div>
                                        </div>
                                    </div>
-->
                                                        <div class="row layout-top-spacing">
                                                            <div class="col-lg-10 col-12 ">
                                                                <div class="form-group">
                                                                    <button
                                                                        class="btn btn-outline-success mb-2 me-4">저장</button>
                                                                    <button class="btn btn-outline-danger mb-2 me-4"
                                                                        type="button" onclick="cancel()">취소</button>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </form>

                                            </div>
                                        </div>
                                    </div>



                                </div>
                            </div>

                        </div>

                        <%- include ("../partials/footer.ejs") %>

                    </div>
                    <!--  END CONTENT AREA  -->
            </div>
            <!-- END MAIN CONTAINER -->

            <%- include ("../partials/commonScrpits.ejs") %>

                <!-- BEGIN PAGE LEVEL PLUGINS/CUSTOM SCRIPTS -->

                <!-- BEGIN PAGE LEVEL PLUGINS/CUSTOM SCRIPTS -->
</body>

</html>