<head>
    <%- include ("../partials/header.ejs") %>
        <% let exportStateCode2Text=['정보입력중', '정보입력완료' , '가견적 확인중' , '견적확인완료' , '차량 인수중' , '차량상태확인중' , '실견적 확인중'
            , '수출 계약 작성 중' , '차량 말소 중' , '수출 완료' ]; %>
            <% function formatDate(d_t) { if(!d_t) return '' ; let year=d_t.getFullYear(); let month=("0" +
                (d_t.getMonth() + 1)).slice(-2); let day=("0" + d_t.getDate()).slice(-2); let hour=("0" +
                d_t.getHours()).slice(-2); let minute=("0" + d_t.getMinutes()).slice(-2); let seconds=("0" +
                d_t.getSeconds()).slice(-2); return year + "-" + month + "-" + day + " " + hour + ":" + minute + ":" +
                seconds } %>
</head>

