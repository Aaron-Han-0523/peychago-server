                <script>
                    async function searchExportClients() {
                        const target_id = "searchResults";
                        const searchWord_element = document.getElementById('searchWord');
                        const searchWord = searchWord_element.value;

                        const res = await fetch(`/exportClients/search?q=${searchWord}`)
                            .then((response) => {
                                // console.log(response.json());
                                return response.json();
                            })
                        // .catch((err) => { console.error(err) });

                        const user = res.user;
                        const result = res.data;

                        // console.log(typeof result.rows[0].createDate);
                        document.getElementById('searchCount').innerText = `${searchWord} 검색결과 ${result.count}개`;
                        searchWord_element.value = '';

                        const exportStateCode2Text = ['정보입력중', '정보입력완료', '가견적 확인중', '견적확인완료', '차량 인수중', '차량상태확인중', '실견적 확인중', '수출 진행 승인', '수출 진행중', '수출 완료'];

                        let tempHTML = ''
                        for (let i = 0; i < result.count; i++) {

                            const data = result.rows[i];

                            tempHTML += `
                                <tr onclick="location.href='/exportClients/${data.carNum}';">
                                    <td class="text-center">
                                        <span class="media-body align-self-center">
                                            ${data.carNum}
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        <span class="media-body align-self-center">
                                            ${data.ownerName}
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        <span class="media-body align-self-center">
                                            ${data.model}
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        <span class="media-body align-self-center">
                                            ${data.yearModel}
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        <span class="badge badge-light-success">
                                            ${exportStateCode2Text[data.state]}
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        <span class="media-body align-self-center">
                                            ${formatDate(data.date0)}
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        <span class="media-body align-self-center">
                                            ${data.date2 ? formatDate(data.date2) : ''}
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        <span class="media-body align-self-center">
                                            ${data.date3 ? formatDate(data.date3) : ''}
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        <span class="media-body align-self-center">
                                            ${data.date4 ? formatDate(data.date4) : ''}
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        <span class="media-body align-self-center">
                                            ${data.date5 ? formatDate(data.date5) : ''}
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        <span class="media-body align-self-center">
                                            ${data.date6 ? formatDate(data.date6) : ''}
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        <div class="action-btns">
                                            `
                            if (user.permission3_2.data[0] & 0b0010) {
                                tempHTML += `<a href="/exportClients/edit/${data.carNum}"
                                                class="action-btn btn-edit bs-tooltip me-2"
                                                data-toggle="tooltip" data-placement="top"
                                                title="Edit">
                                                <svg xmlns="http://www.w3.org/2000/svg"
                                                    width="24" height="24"
                                                    viewBox="0 0 24 24" fill="none"
                                                    stroke="currentColor" stroke-width="2"
                                                    stroke-linecap="round"
                                                    stroke-linejoin="round"
                                                    class="feather feather-edit-2">
                                                    <path
                                                        d="M17 3a2.828 2.828 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5L17 3z">
                                                    </path>
                                                </svg>
                                            </a>`
                            }

                            if (user.permission3_2.data[0] & 0b0001) {
                                tempHTML += `<a onclick="delete_(event, '/exportClients/delete/${data.carNum}');"
                                                class="action-btn btn-delete bs-tooltip"
                                                data-toggle="tooltip"
                                                data-placement="top" title="Delete">
                                                <svg xmlns="http://www.w3.org/2000/svg"
                                                    width="24" height="24"
                                                    viewBox="0 0 24 24" fill="none"
                                                    stroke="currentColor"
                                                    stroke-width="2"
                                                    stroke-linecap="round"
                                                    stroke-linejoin="round"
                                                    class="feather feather-trash-2">
                                                    <polyline points="3 6 5 6 21 6">
                                                    </polyline>
                                                    <path
                                                        d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2">
                                                    </path>
                                                    <line x1="10" y1="11" x2="10"
                                                        y2="17">
                                                    </line>
                                                    <line x1="14" y1="11" x2="14"
                                                        y2="17">
                                                    </line>
                                                </svg>
                                            </a>`
                            }
                            tempHTML += `</div>
                                    </td >
                                </tr >`
                        }

                        document.getElementById(target_id).innerHTML = tempHTML;
                    }
                </script>
