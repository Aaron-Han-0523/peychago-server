<!DOCTYPE html>
<html lang="en">

<head>
    <%- include ("../partials/header.ejs") %>
</head>

<body class="layout-boxed alt-menu">

    <%- include ("../partials/loader.ejs") %>

        <%- include ("../partials/nav.ejs") %>

            <!--  BEGIN MAIN CONTAINER  -->
            <div class="main-container sidebar-closed " id="container">

                <div class="overlay"></div>
                <div class="search-overlay"></div>

                <%- include ("../partials/sidebar.ejs") %>

                    <!--  BEGIN CONTENT AREA  -->
                    <div id="content" class="main-content">
                        <div class="layout-px-spacing">

                            <div class="middle-content container-xxl p-0">
                                <!-- BREADCRUMB -->
                                <div class="page-meta">
                                    <nav class="breadcrumb-style-one" aria-label="breadcrumb">
                                        <ol class="breadcrumb">
                                            <!-- <li class="breadcrumb-item"><a href="#">Table</a></li> -->
                                            <li class="breadcrumb-item active" aria-current="page">Review Management
                                            </li>
                                        </ol>
                                    </nav>
                                </div>
                                <!-- /BREADCRUMB -->

                                <div class="col-lg-12 layout-top-spacing">
                                    <div class="input-group">
                                        <input type="text" class="form-control" placeholder="Title and content"
                                            aria-label="Recipient's username with two button addons">
                                        <button class="btn btn-outline-primary" type="button">Search</button>
                                        <button class="btn btn-outline-primary" type="button"
                                            onclick="exportExcel('review_list_table','review_list_file','review_list_sheet');">Excel
                                            Download</button>
                                        <button class="btn btn-outline-primary" type="button"
                                            onclick="location.href='/review/add';">+ Add New</button>
                                    </div>
                                </div>

                                <div class="row layout-top-spacing">


                                    <div class="table-responsive">
                                        <table class="table table-striped table-bordered">
                                            <thead>
                                                <tr>
                                                    <!-- <th scope="col" width="5%">
                                                        <div class="form-check form-check-primary">
                                                            <input class="form-check-input" id="custom_mixed_parent_all"
                                                                type="checkbox">
                                                        </div>
                                                    </th> -->
                                                    <th scope="col">Car number</th>
                                                    <th scope="col">Title</th>
                                                    <th class="text-center" scope="col">Phone num</th>
                                                    <th class="text-center" scope="col">Owner</th>
                                                    <th class="text-center" scope="col">Created date</th>
                                                    <th class="text-center" scope="col">Updated User</th>
                                                    <th class="text-center" scope="col">Updated Date</th>
                                                    <th class="text-center" scope="col">Grade</th>
                                                    <th class="text-center" scope="col">Function</th>
                                                </tr>
                                                <tr aria-hidden="true" class="mt-3 d-block table-row-hidden"></tr>
                                            </thead>
                                            <tbody>
                                                <% function formatDate(d_t) { let year=d_t.getFullYear(); let month=("0"
                                                    + (d_t.getMonth() + 1)).slice(-2); let day=("0" +
                                                    d_t.getDate()).slice(-2); let hour=("0" + d_t.getHours()).slice(-2);
                                                    let minute=("0" + d_t.getMinutes()).slice(-2); let seconds=("0" +
                                                    d_t.getSeconds()).slice(-2); return year + "-" + month + "-" + day
                                                    + " " + hour + ":" + minute + ":" + seconds } %>
                                                    <% data.forEach( function(item, index) { %>
                                                        <tr>
                                                            <!-- <td>
                                                                <div class="form-check form-check-primary">
                                                                    <input class="form-check-input custom_mixed_child"
                                                                        type="checkbox">
                                                                </div>
                                                            </td> -->
                                                            <td class="text-center">
                                                                <span class="media-body align-self-center">
                                                                    <%= item.carNum.slice(0,-2) + "**" %>
                                                                </span>
                                                            </td>
                                                            <td class="text-center">
                                                                <h6 class="mb-0"><a
                                                                    href='/review/<%= item.review_id %>'>
                                                                    <%= item.title %>
                                                                </a></h6>
                                                            </td>
                                                            <td class="text-center">
                                                                <span class="media-body align-self-center">
                                                                    <%= item.phoneNum.slice(0,-4) + "****" %>
                                                                </span>
                                                            </td>
                                                            <td class="text-center">
                                                                <span class="media-body align-self-center">
                                                                    <%= item.clientName[0] + '*' +
                                                                        item.clientName.slice(2)%>
                                                                </span>
                                                            </td>
                                                            <td class="text-center">
                                                                <span class="media-body align-self-center">
                                                                    <%= formatDate(item.createDate) %>
                                                                </span>
                                                            </td>
                                                            <td class="text-center">
                                                                <span class="media-body align-self-center">
                                                                    <%= item.updateUser %>
                                                                </span>
                                                            </td>
                                                            <td class="text-center">
                                                                <span class="media-body align-self-center">
                                                                    <%= item.updateDate? formatDate(item.updateDate):''
                                                                        %>
                                                                </span>
                                                            </td>
                                                            <td class="text-center">
                                                                <% for(let i=0; i < item.grade; i++){ %><span
                                                                        class="media-body align-self-center"><svg
                                                                            xmlns="http://www.w3.org/2000/svg"
                                                                            width="24" height="24" viewBox="0 0 24 24"
                                                                            fill="none" stroke="currentColor"
                                                                            stroke-width="2" stroke-linecap="round"
                                                                            stroke-linejoin="round"
                                                                            class="feather feather-star">
                                                                            <polygon
                                                                                points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2">
                                                                            </polygon>
                                                                        </svg></span>
                                                                    <% } %>
                                                            </td>
                                                            <td class="text-center">
                                                                <div class="action-btns">
                                                                    <!-- <a href="javascript:void(0);"
                                                                        class="action-btn btn-view bs-tooltip me-2"
                                                                        data-toggle="tooltip" data-placement="top"
                                                                        title="View">
                                                                        <svg xmlns="http://www.w3.org/2000/svg"
                                                                            width="24" height="24" viewBox="0 0 24 24"
                                                                            fill="none" stroke="currentColor"
                                                                            stroke-width="2" stroke-linecap="round"
                                                                            stroke-linejoin="round"
                                                                            class="feather feather-eye">
                                                                            <path
                                                                                d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z">
                                                                            </path>
                                                                            <circle cx="12" cy="12" r="3"></circle>
                                                                        </svg>
                                                                    </a> -->
                                                                    <% if(user.permission2.data[0]&0b0010) { %>
                                                                        <a href="/review/edit/<%= item.review_id %>"
                                                                            class="action-btn btn-edit bs-tooltip me-2"
                                                                            data-toggle="tooltip" data-placement="top"
                                                                            title="Edit">
                                                                            <svg xmlns="http://www.w3.org/2000/svg"
                                                                                width="24" height="24"
                                                                                viewBox="0 0 24 24" fill="none"
                                                                                stroke="currentColor" stroke-width="2"
                                                                                stroke-linecap="round"
                                                                                stroke-linejoin="round"
                                                                                class="feather feather-edit-2">
                                                                                <path
                                                                                    d="M17 3a2.828 2.828 0 1 1 4 4L7.5 20.5 2 22l1.5-5.5L17 3z">
                                                                                </path>
                                                                            </svg>
                                                                        </a>
                                                                        <% } %>
                                                                            <% if(user.permission2.data[0]&0b0001) { %>
                                                                                <a href="/review/delete/<%= item.review_id %>"
                                                                                    class="action-btn btn-delete bs-tooltip"
                                                                                    data-toggle="tooltip"
                                                                                    data-placement="top" title="Delete">
                                                                                    <svg xmlns="http://www.w3.org/2000/svg"
                                                                                        width="24" height="24"
                                                                                        viewBox="0 0 24 24" fill="none"
                                                                                        stroke="currentColor"
                                                                                        stroke-width="2"
                                                                                        stroke-linecap="round"
                                                                                        stroke-linejoin="round"
                                                                                        class="feather feather-trash-2">
                                                                                        <polyline points="3 6 5 6 21 6">
                                                                                        </polyline>
                                                                                        <path
                                                                                            d="M19 6v14a2 2 0 0 1-2 2H7a2 2 0 0 1-2-2V6m3 0V4a2 2 0 0 1 2-2h4a2 2 0 0 1 2 2v2">
                                                                                        </path>
                                                                                        <line x1="10" y1="11" x2="10"
                                                                                            y2="17">
                                                                                        </line>
                                                                                        <line x1="14" y1="11" x2="14"
                                                                                            y2="17">
                                                                                        </line>
                                                                                    </svg>
                                                                                </a>
                                                                                <% } %>
                                                                </div>
                                                            </td>
                                                        </tr>
                                                        <% }); %>
                                            </tbody>
                                        </table>
                                    </div>

                                </div>

                            </div>

                        </div>

                        <%- include ("../partials/footer.ejs") %>

                    </div>
                    <!--  END CONTENT AREA  -->
            </div>
            <!-- END MAIN CONTAINER -->

            <%- include ("../partials/commonScrpits.ejs") %>

                <!-- BEGIN PAGE LEVEL PLUGINS/CUSTOM SCRIPTS -->
                <script>
                    /*
                    checkall('checkbox_parent_all', 'checkbox_child');
                    checkall('hover_parent_all', 'hover_child');
                    checkall('striped_parent_all', 'striped_child');
                    checkall('bordered_parent_all', 'bordered_child');
                    checkall('mixed_parent_all', 'mixed_child');
                    checkall('noSpacing_parent_all', 'noSpacing_child');
                    checkall('custom_mixed_parent_all', 'custom_mixed_child');
                    */
                </script>
                <!-- BEGIN PAGE LEVEL PLUGINS/CUSTOM SCRIPTS -->
</body>

</html>